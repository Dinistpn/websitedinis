{% extends "prelogin-layout.html" %}

{% block title %}
    Error
{% endblock %}

{% block content %}
    <h2>Oops, {{ message }}</h2>
{% endblock %}

<div class="results-container" style=" width: 65rem; height: 12rem; border-style: inset; 
    border-color:blue;">
            
        <div class="card2">            
            <div class="card-body2">   
                <h6>Most Recent contributor: <h6 class="ee">
                {{recent[0]['username']}}</h6>
                <h6>__________________________</h6>
                <h6>__________________________</h6>
            </div>
        </div> 
        <div class="card2">
            <div class="card-body2">
                <h6>Most popular landscape: <h6 class="ee">
                {{landscape[0]['landscape']}}</h6> </h6>
                <h6>No comments: <h6 class="ee">
                {{landscape[0]['comments']}}</h6></h6>
                <h6>No ratings:<h6 class="ee"> 
                {{landscape[0]['ratings']}}</h6></h6>
            </div>
        </div>    
        <div class="card2">
            <div class="card-body2">
                <h6>The most active user:<h6 class="ee"> 
                {{maxP[0]['username']}}</h6></h6>
                <h6>No comments:<h6 class="ee"> 
                {{maxP[0]['comments']}}</h6></h6>
                <h6>No ratings:<h6 class="ee"> 
                {{maxP[0]['rating']}}</h6></h6>
            </div>
        </div>   
        <div class="card2">
            <div class="card-body2">    
                <h6>Most popular weather: <h6 class="ee"> 
                {{weather[0]['weather']}}</h6></h6>
                <h6>No comments: <h6 class="ee"> 
                {{weather[0]['comments']}}</h6></h6>
                <h6>No ratings: <h6 class="ee"> 
                {{weather[0]['ratings']}}</h6></h6>
            </div>
        </div>    
    </div>